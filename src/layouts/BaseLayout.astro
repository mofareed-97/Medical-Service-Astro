---
import Icon from "astro-icon";
import { SEO } from "astro-seo";
import Navigation from "../components/Navbar";

export interface Props {
  pageTitle: string;
}

const { pageTitle } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <SEO
      title="CareFirst"
      description="CareFirst is a leading provider of high-quality medical services designed to meet the diverse healthcare needs of our patients. Our team of experienced and highly qualified healthcare professionals offers a wide range of services, including primary care, specialty care, diagnostics, laboratory services, radiology, and more."
      openGraph={{
        basic: {
          title: "A Very Descriptive Title",
          type: "A type.",
          image:
            "https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png",
        },
        image: {
          alt: "agency logo",
        },
      }}
      twitter={{
        creator: "@jonasmerlins1",
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.ico" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content:
              "https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png",
          },
          { name: "twitter:title", content: "Tinker Tailor Soldier Spy" },
          { name: "twitter:description", content: "Agent" },
        ],
      }}
    />
  </head>
  <body class="min-h-screen bg-blue-50">
    <div>
      <Navigation client:load />

      <slot />
    </div>
  </body>
</html>
